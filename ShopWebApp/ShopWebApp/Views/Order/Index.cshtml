@model List<ShopWebApp.Models.DataModels.Order>

<link type="text/css" rel="stylesheet" href="~/css/order.css" />

@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<section class="order-container container">
    <div class="wrapper-content">
        <div class="top-level-header">
            <h3 class="order-title">Your order</h3>
            <a href="/" class="order__continue-shopping">Continue shopping</a>
        </div>
        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Create date</th>
                        <th scope="col">Update date</th>
                        <th scope="col">Delivery date</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row"><a asp-action="GetOrderDetailsByOrderId" asp-controller="Order" asp-route-orderId="@item.Id">@item.Id</a></th>
                            <td>@item.CreateDate</td>
                            <td>@item.UpdateDate</td>
                            <td>@item.DeliveryDate</td>
                            <td>@(item.Status == 0 ? "Pending" : @item.Status == 1 ? "Paid by Paypal" : @item.Status == 2 ? "Pending (COD)" : "Complete")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Your list order is empty</p>
        }
    </div>
</section>
