@model ShopWebApp.Models.DataModels.Product
@{
    ViewData["Title"] = $"{Model.Name} - {Model.UnitPrice.ToString("#,##0")} VNĐ";
    Layout = "~/Views/Shared/_FrontEndLayout.cshtml";
}
<div class="col-md-9 product-price1">
    <div class="col-md-4 single-top">
        <img height="200" src="@ViewBag.domainUrl/sanpham/@Model.Image" alt="@Model.Name" />
    </div>
    <div class="col-md-1 single-top"></div>
    <div class="col-md-4 single-top-in simpleCart_shelfItem">
        <div class="single-para ">
            <h4>@Model.Name</h4>

            <h5 class="item_price">@Model.UnitPrice.ToString("#,##0") VNĐ</h5>
            @Html.Raw(Model.Description)
            <ul class="tag-men">
                <li>
                    <span>Hãng</span>
                    <span class="women1">: @Model.SupplierName</span>
                </li>
            </ul>
            <a asp-controller="GioHang" asp-action="AddToCart" asp-route-Id="@Model.Id" class="add-cart item_add">Mua</a>
        </div>
    </div>
    <div class="clearfix"> </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <label>SẢN PHẨM CÙNG HÃNG</label>
    <br />
    <br />
    <div class=" bottom-product">
        @foreach (var item in ViewBag.DSHangNgauNhien)
        {
            <div class="col-md-4 bottom-cd simpleCart_shelfItem">
                <div class="product-at ">
                    <a asp-action="ChiTiet" asp-route-id="@item.Id">
                        <img height="100" src="@ViewBag.domainUrl/sanpham/@item.Image" alt="@item.Name">
                    </a>
                </div>
                <p class="tun">@item.Name</p>
                <a href="#" class="item_add"><p class="number item_price"><i> </i>@item.UnitPrice</p></a>
            </div>
        }
        <div class="clearfix"> </div>
    </div>
</div>

