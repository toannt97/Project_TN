@model IEnumerable<ShopWebApp.Models.DataModels.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_FrontEndLayout.cshtml";
}

<div class="col-md-9 product1">
    @foreach (var product in Model)
    {
        <div class="col-md-4 home-grid" style="position:relative">
            <div class="home-product-main">
                <div class="home-product-top">
                    <a style="text-decoration:none" asp-action="GetDetail" asp-route-id="@product.Id"><img src="@ViewBag.domainUrl/sanpham/@product.Image" style="width:60%" ;></a>
                </div>
                <div class="home-product-bottom">
                    <h6><a style="text-decoration:none" asp-action="GetDetail" asp-route-id="@product.Id">@product.Name</a></h6>
                    <h5 class="prodcut__price-label" style="display:inline-block">Price:</h5> <h4 class="product__pricet-number" style="display:inline-block; color: #ED0000"> @product.UnitPrice.ToString("#,##0") VNĐ</h4>
                </div>
            </div>
            <br />
        </div>
    }
</div>
<div class="clearfix"> </div>
<br />
<br />
<nav class="pagination">
    Current page : @(ViewBag.PageNumber + 1) / @(ViewBag.TotalPage)
    <div>
        <a class="btn btn-default @(ViewBag.PageNumber == 0 ? "disabled" : "")" asp-action="Index" asp-route-pageNo="0" asp-route-mahang="@ViewBag.MaHang">First page</a>
        <a class="btn btn-default @(ViewBag.PageNumber == 0 ? "disabled" : "")" asp-action="Index" asp-route-pageNo="@(ViewBag.PageNumber - 1)" asp-route-mahang="@ViewBag.MaHang">Previous</a>
        <a class="btn btn-default @((ViewBag.PageNumber == ViewBag.TotalPage -1) ? "disabled" : "")" asp-action="Index" asp-route-pageNo="@(ViewBag.PageNumber + 1)" asp-route-mahang="@ViewBag.MaHang">Next</a>
        <a class="btn btn-default @((ViewBag.PageNumber == ViewBag.TotalPage -1) ? "disabled" : "")" asp-action="Index" asp-route-pageNo="@(ViewBag.TotalPage -1)" asp-route-mahang="@ViewBag.MaHang">Last page</a>
    </div>
</nav>

