@model ShopWebApp.Models.DataModels.User
<link href='~/css/sign_up.css' rel='stylesheet' type='text/css'>

<div class="register-form">
    <span class="close-modal">X</span>
    <div class="main-div">
        <div class="panel">
            <h1 id="test">Register</h1>
        </div>
        <div class="success-notification" style="display:none;">
            <figure class="success-notification__image">
                <img src="https://onlineshop.blob.core.windows.net/image/checkmark.jpg"  />
            </figure>
            <p class="success-notification__title">
                Your account has been successfully registered. Please check your email to activate your account.
            </p>
        </div>
        <form id="RegisterForm" asp-controller="User" asp-action="SignUp" method="post" onsubmit="return jQueryAxjaxSignUpPost(this)">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <input type="text" class="form-control" id="fullname-js" placeholder="User name" asp-for="UserName">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="email" class="form-control" id="email-register-js" placeholder="Email Address" asp-for="EmailAddress">
                <span asp-validation-for="EmailAddress" class="text-danger"></span>

            </div>

            <div class="form-group">
                <input type="password" class="form-control" id="password-register-js" placeholder="Password" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="password" class="form-control" placeholder="Confirm password" asp-for="ConfirmPassword">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group phone-number">
                <p class="phone-prefix-fixed">+84</p>
                <input type="text" maxlength="15" class="form-control input-phone-number" onkeypress="return onlyNumberKey(event)"
                       placeholder="Phone number" asp-for="PhoneNumber" pattern="^[1-9][0-9]+">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="text" class="form-control" placeholder="Address" asp-for="Address">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <p class="text-danger register-fail"></p>
            <button type="submit" class="btn btn-primary button-submit">Sign up</button>
            <button type="button" class="btn btn-primary button-ok" style="display:none;">OK</button>

        </form>

    </div>
</div>

<!--Script-->
<script src="~/js/sign_up.js"></script>
<script src="~/js/site.js"></script>
