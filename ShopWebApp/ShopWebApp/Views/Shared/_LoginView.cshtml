@model ShopWebApp.Models.DataModels.UserSignIn
<link href='~/css/sign_in.css' rel='stylesheet' type='text/css'>


<div class="login-form">
    <span class="close-modal">X</span>
    <div class="main-div">
        <div class="panel">
            <h1>Login</h1>
        </div>
        <form id="#LoginForm" asp-action="SignIn" asp-controller="User" onsubmit="return jQueryAxjaxSignInPost(this)">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <input type="email" class="form-control" id="email-login-js" placeholder="Email Address" asp-for="EmailAddress" value="nguyenthaitoan1997@gmail.com">
                <span asp-validation-for="EmailAddress" class="text-danger validation"></span>
            </div>

            <div class="form-group">

                <input type="password" class="form-control" id="password-login-js" placeholder="Password" asp-for="Password" value="P@ssword@123">
                <span asp-validation-for="Password" class="text-danger validation"></span>
            </div>
            <div class="forgot">
                <a href="reset.html">Forgot password?</a>
            </div>
            <p class="text-danger login-fail"></p>
            <button class="btn btn-primary">Sign in</button>
        </form>
    </div>
</div>

<script src="~/js/sign_in.js" type="text/javascript"></script>
<script src="~/js/site.js" type="text/javascript"></script>
