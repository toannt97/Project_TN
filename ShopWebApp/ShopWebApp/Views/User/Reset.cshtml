@model ShopWebApp.Models.ViewModels.UserRestore

@{
    Layout = "_EmptyLayout";
}

<div class="card-layout">
    <em class="card-layout__button-close">X</em>
    <header class="card-layout__header">
        <h1 class="card-layout__title">Reset password</h1>
    </header>
    <main class="card-layout__body">
        <h4 class="card-layout__sub-title">Enter email address. We'll email you new password.</h4>
        <p class="card-layout__notification"></p>
        <div class="form-group">
            <input class="card-layout__input-text user-reset__email-address form-control" placeholder="Email address" asp-for="EmailAddress" />
            <span asp-validation-for="EmailAddress" class="text-danger card-layout__validation"></span>
        </div>
    </main>
    <footer class="card-layout__footer">
        <button class="card-layout__button-submit" id="user-reset__button-submit">Send</button>
    </footer>
</div>

<script src="~/js/user.js" type="text/javascript"></script>
