@model ShopWebApp.Models.ViewModels.UserRestore

@{
    Layout = "_EmptyLayout";
}

<link href='~/css/user_reset.css' rel='stylesheet' type='text/css'>

<div class="user-reset container">
    <header class="user-reset__header">
        <h1 class="user-reset__title">Reset password</h1>
        <em class="user-reset__close-button">X</em>
    </header>
    <main class="user-reset__body">
        <p class="user-reset__message">Enter your username and email address. We'll email you new password.</p>
        <div class="form-group">
            <input class="user-reset__user-name form-control" placeholder="User name" asp-for="UserName" />
            <span asp-validation-for="UserName" class="text-danger user-reset__validation"></span>
        </div>
        <div class="form-group">

            <input class="user-reset__email-address form-control" placeholder="Email address" asp-for="EmailAddress" />
            <span asp-validation-for="EmailAddress" class="text-danger user-reset__validation"></span>
        </div>

    </main>
    <footer class="user-reset__footer">
        <button class="btn btn-primary user-reset__button-send">Send</button>
    </footer>
</div>

<script src="~/js/user_reset.js" type="text/javascript"></script>