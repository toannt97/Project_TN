@model ShopWebApp.Models.ViewModels.UserChangePassword

@{
    Layout = "_EmptyLayout";
}

<link href="~/css/user.css" rel="stylesheet" type="text/css">

<div class="card-layout">
    <em class="card-layout__button-close">X</em>
    <header class="card-layout__header">
        <h1 class="card-layout__title">Change password</h1>
    </header>
    <main class="card-layout__body">
        <p class="card-layout__notification">dasdasd</p>
        <div class="form-group">
            <input class="card-layout__input-text user-change-password__current-password form-control" placeholder="Current password" asp-for="CurrentPassword" />
            <span asp-validation-for="CurrentPassword" class="text-danger card-layout__validation"></span>
        </div>
        <div class="form-group">
            <input class="card-layout__input-text user-change-password__new-password form-control" placeholder="New password" asp-for="NewPassword" />
            <span asp-validation-for="NewPassword" class="text-danger card-layout__validation user-change-password__validation--new-password"></span>
        </div>
        <div class="form-group">
            <input class="card-layout__input-text user-change-password__password-confirmation form-control" placeholder="Confirm password" asp-for="PasswordComfirmation" />
            <span asp-validation-for="PasswordComfirmation" class="text-danger card-layout__validation"></span>
        </div>
    </main>
    <footer class="card-layout__footer">
        <button class="card-layout__button-submit" id="user-change-password__button-submit">Submit</button>
    </footer>
</div>

<script src="~/js/user.js" type="text/javascript"></script>
