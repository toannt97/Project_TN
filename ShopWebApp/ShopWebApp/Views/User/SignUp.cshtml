@model ShopWebApp.Models.DataModels.User

<link href='~/css/sign_up.css' rel='stylesheet' type='text/css'>

<div class="sign-up">
    <em class="sign-up__close-button">X</em>
    <header class="sign-up__header ">
        <h1 class="sign-up__title">Register</h1>
    </header>
    <main class="sign-up__body">
        <div class="sign-up__notification--success" style="display:none;">
            <figure>
                <img class="sign-up__notification--success-image" src="https://onlineshop.blob.core.windows.net/image/checkmark.jpg" />
            </figure>
            <p class="sign-up__notification--success-title">
                Your account has been successfully registered. Please check your email to activate your account.
            </p>
        </div>

        <div class="form-group">
            <input type="text" class="sign-up__user-name form-control" placeholder="User name" asp-for="UserName">
            <span asp-validation-for="UserName" class="text-danger sign-up__validation"></span>
        </div>

        <div class="form-group">
            <input type="email" class="sign-up__email-address form-control" placeholder="Email Address" asp-for="EmailAddress">
            <span asp-validation-for="EmailAddress" class="text-danger sign-up__validation"></span>
        </div>

        <div class="form-group">
            <input type="password" class="sign-up__password form-control" placeholder="Password" asp-for="Password">
            <span asp-validation-for="Password" class="text-danger sign-up__validation"></span>
        </div>

        <div class="form-group">
            <input type="password" class="sign-up__confirm-password form-control" placeholder="Confirm password" asp-for="ConfirmPassword">
            <span asp-validation-for="ConfirmPassword" class="text-danger sign-up__validation"></span>
        </div>

        <div class="form-group ">
            <div class="sign-up__phone">
                <p class="sign-up__phone-prefix">+84</p>
                <input type="text" maxlength="15" class="sign-up__phone-number form-control" onkeypress="return onlyNumberKey(event)" placeholder="Phone number" asp-for="PhoneNumber" pattern="^[1-9][0-9]+">
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger sign-up__validation"></span>
        </div>

        <div class="form-group">
            <input type="text" class="sign-in__address form-control" placeholder="Address" asp-for="Address">
            <span asp-validation-for="Address" class="text-danger sign-up__validation"></span>
        </div>
        <p class="text-danger sign-up__register-fail"></p>
    </main>
    <footer class="sign-up__footer">
        <button type="button" class="sign-up__button-submit">Sign up</button>
        <button type="button" class="sign-up__validation__button-ok">OK</button>
    </footer>
</div>

<!--Script-->
<script src="~/js/sign_up.js"></script>
