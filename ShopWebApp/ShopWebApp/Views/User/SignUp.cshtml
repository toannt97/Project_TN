@model ShopWebApp.Models.DataModels.User

<link href='~/css/user.css' rel='stylesheet' type='text/css'>

<div class="card-layout">
    <em class="card-layout__button-close">X</em>
    <header class="card-layout__header">
        <h1 class="card-layout__title">Register</h1>
    </header>
    <main class="card-layout__body">
            <p class="card-layout__notification"></p>
        <div class="form-group">
            <input type="text" class="card-layout__input-text sign-up__user-name form-control" placeholder="User name" asp-for="UserName" maxlength="50">
            <span asp-validation-for="UserName" class="text-danger card-layout__validation"></span>
        </div>

        <div class="form-group">
            <input type="email" class="card-layout__input-text sign-up__email-address form-control" placeholder="Email Address" asp-for="EmailAddress" maxlength="50">
            <span asp-validation-for="EmailAddress" class="text-danger card-layout__validation"></span>
        </div>

        <div class="form-group">
            <input type="password" class="card-layout__input-text sign-up__password form-control" placeholder="Password" asp-for="Password" maxlength="50">
            <span asp-validation-for="Password" class="text-danger card-layout__validation"></span>
        </div>

        <div class="form-group">
            <input type="password" class="card-layout__input-text sign-up__confirm-password form-control" placeholder="Confirm password" asp-for="ConfirmPassword" maxlength="50">
            <span asp-validation-for="ConfirmPassword" class="text-danger card-layout__validation"></span>
        </div>

        <div class="form-group ">
            <div class="card-layout__phone">
                <p class="card-layout__phone-prefix">+84</p>
                <input type="text" maxlength="15" class="card-layout__input-text sign-up__phone-number form-control" onkeypress="return onlyNumberKey(event)" placeholder="Phone number" asp-for="PhoneNumber" pattern="^[1-9][0-9]+">
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger card-layout__validation"></span>
        </div>

        <div class="form-group">
            <input type="text" class="card-layout__input-text sign-in__address form-control" placeholder="Address" asp-for="Address">
            <span asp-validation-for="Address" class="text-danger card-layout__validation"></span>
        </div>
    </main>
    <footer class="card-layout__footer">
        <button type="button" class="card-layout__button-submit" id="sign-up__button-submit">Sign up</button>
    </footer>
</div>

<!--Script-->
<script src="~/js/user.js"></script>
